<section class='content-section full-screen-container-fluid '  id="new-user-section">
  <div class="container-fluid full-screen-container-fluid  piecesOfEight piecesOfEight-xxs piecesOfEight-space piecesOfEight-black piecesOfEight-center">

   <div class="row">
    <div class="col-sm-8 col-sm-offset-2 user-text">
      <h1>Bienvenido(a)</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 user-form-box">
      <div class="user-form-top">
        <div class="user-form-top-left">
          <h3>Crea tu cuenta y comienza ser un pirata</h3>
        </div>
      </div>
      <div class="user-form-bottom">
        <%= form_for @user do |f| %>
        <%= render 'shared/errors', object: @user %>   
        <!--  <form role="form" action="" method="post" class="user-login-form"> -->
        <div class="form-group">
          <%= f.label  :nickname, class:"sr-only" %>
          <%= f.text_field :nickname, class: 'form-username form-control piecesOfEight piecesOfEight-sm',placeholder:"Nombre de usuario", required: true %>

        </div>
        <div class="form-group">
          <%= f.label :email,class:"sr-only"  %>
          <%= f.email_field :email, class: 'form-email form-control piecesOfEight piecesOfEight-sm',placeholder:"Correo electrÃ³nico", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :password,class:"sr-only"  %>
          <%= f.password_field :password, class: 'form-email form-control piecesOfEight piecesOfEight-sm',placeholder:"Password", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation,class:"sr-only"  %>
          <%= f.password_field :password_confirmation, class: 'form-email form-control piecesOfEight piecesOfEight-sm',placeholder:"Confirmar password", required: true %>
        </div>
        <button type="submit" class="btn piecesOfEight piecesOfEight-sm">Crear cuenta</button>
        <!-- </form> -->
        <% end %>


      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 user-social-login">
      <h3>...o conectate con:</h3>
      <div class="user-social-login-buttons ">
        <div class="col-xs-12 col-sm-4 ">
          <a class="btn btn-link-1 user-btn-link-1-facebook piecesOfEight-white" href="#">
            <i class="fa fa-facebook"></i> Facebook
          </a>
        </div>
        <div class="col-xs-12 col-sm-4 ">
          <a class="btn btn-link-1 user-btn-link-1-twitter piecesOfEight-white" href="#">
            <i class="fa fa-twitter"></i> Twitter
          </a>
        </div>
        <div class="col-xs-12 col-sm-4 ">
          <a class="btn btn-link-1 user-btn-link-1-google-plus piecesOfEight-white" href="#">
            <i class="fa fa-google-plus"></i> Google Plus
          </a>
        </div>



      </div>
    </div>
  </div>




</div>
</section>